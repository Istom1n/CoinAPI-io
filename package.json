{
    "name": "coinapi-io",
    "version": "2.0.0",
    "description": "Updated JavaScript Library for CoinAPI.io",
    "main": "dist/coinapi-v2.commonjs2.js",
    "scripts": {
        "clean": "rimraf dist",
        "docs": "documentation build src/coinapi-v2.js -f html -o docs",
        "start": "npm run build",
        "build": "webpack --progress --color ",
        "build-watch": "webpack --progress --color --watch",
        "lint": "standard 'src/**/*.js' 'src/*.js' 'test/**/*.js' 'test/*.js'",
        "lint-fix":
            "standard --fix 'src/**/*.js' 'src/*.js' 'test/**/*.js' 'test/*.js'",
        "test": "jest",
        "test-watch": "jest --watch",
        "test-integration": "jest --config integration/jest.config.js",
        "test-integration-watch":
            "jest --config integration/jest.config.js --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ivan-Istomin/CoinAPI-io.git"
    },
    "author": "Ivan Istomin",
    "license": "MIT",
    "keywords": ["cryptocurrency", "coin", "coinAPI"],
    "bugs": {
        "url": "https://github.com/Ivan-Istomin/CoinAPI-io/issues"
    },
    "homepage": "https://github.com/Ivan-Istomin/CoinAPI-io#readme",
    "dependencies": {
        "axios": "^0.18.0",
        "babel-runtime": "^6.26.0",
        "socket.io-client": "^2.1.1",
        "url-join": "^4.0.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.4",
        "babel-minify-webpack-plugin": "^0.3.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "jest": "^23.0.1",
        "jest-cli": "^23.0.1",
        "rimraf": "^2.6.2",
        "standard": "^11.0.1",
        "watch-http-server": "^0.7.6",
        "webpack": "^4.9.1",
        "webpack-dev-server": "^3.1.4",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "verbose": true,
        "bail": false,
        "watchPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/.git/"
        ],
        "testMatch": ["<rootDir>/(src|test)/**/*.test.js"]
    },
    "standard": {
        "globals": ["expect", "describe", "it"]
    }
}
